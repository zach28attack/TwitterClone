<div class = "tweets">
  <% if @user.photos.last%>
    <img src = <%=@user.photos.last.image_url(:large).to_s%> id = "profile-image">
  <%end%>
  <h1 class = "title" >
    <%= @user.username%>
    <%if user_signed_in?%>
      <% if current_user == @user%>
        <%= link_to "âš™", edit_user_registration_path %>
      <%elsif current_user != @user && !current_user.following.include?(@user) %>
        <%= button_to "Follow", follows_path, class: "btn btn-success", params: {follow: {following_id: @user.id, follower_id: current_user.id}} %>
      <%elsif current_user != @user && current_user.following.include?(@user) %>
        <%= button_to "Unfollow", follow_path, class: "btn btn-danger", method: :delete, params: {follow: {following_id: @user.id, follower_id: current_user.id}} %>
      <%end%>
    <%end%>
  </h1>
  
    <% @user.tweets.each do |tweet| %>
      <%= render partial: "tweets/#{tweet.tweet_type}", locals: {tweet: tweet} %>
    <% end %>
  
</div>