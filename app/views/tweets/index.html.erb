<p style="color: green"><%= notice %></p>
<h1 class = "text-center">Tweets#index</h1>

<div class = "container" id="tweets">
  <div class = "justify-content-center">
    <%= render 'form', tweet: @tweet%>
    <% @tweets.each do |tweet| %>
      <%= render tweet %>
      <p>
        <%= link_to "Show this tweet", tweet %>
      </p>
    <% end %>
  </div>
</div>
