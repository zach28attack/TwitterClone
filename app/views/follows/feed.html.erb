<div class="tweets">
  <%if @arrayOfTweets.length >= 1%>
    <h1 class="title">Home</h1>
    <%= render partial: 'tweets/form', locals:{tweet: @tweet} if user_signed_in?%>
    <% @arrayOfTweets.each do |tweet| %>
      <%= render partial: "tweets/#{tweet.tweet_type}", locals: {tweet: tweet, retweet: tweet} %>
      <%if tweet.comments.last%>
        <%= render partial: "comments/index_comment", locals: {comment: tweet.comments.last} %> 
      <%end%>
    <%end%>
  <%elsif @arrayOfTweets.length < 1%>
    <h1 class="title">Be the first of your friends to tweet!</h1>
    <%= render partial: 'tweets/form', locals:{tweet: @tweet} if user_signed_in?%>
  <%end%>
</div>

